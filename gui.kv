BoxLayout:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    Label:
        halign: 'center'
        valign: 'middle'
        font_size: 25
        text: app.current_trip
        color: (0, 0, 0, 1)

    BoxLayout:
        Spinner:
            id: away_spinner
            values: app.saved_trips
            on_text: app.handle_convert('away')
        TextInput:
            font_size:40
            id: away_currency_input
            on_text_validate: app.handle_convert('away')
            multiline: False
            size: 100, 350
    BoxLayout:
        Label:
            id: user_country
            color: (0, 0, 0, 1)
            text: app.home_country
        TextInput:
            font_size:40
            id: home_currency_input
            on_text_validate: app.handle_convert('home')
            multiline: False
            size: 100, 350
    BoxLayout
        orientation: 'horizontal'
        Label:
            halign: 'center'
            valign: 'middle'
            color: (0, 0, 0, 1)
            text: app.current_date_build
        Label:
            color: (0, 0, 0, 1)
            font_size: 10
            id: app_status
            size: 100, 350
            pos: 0, 300
    Button:
        id: update_currency
        text: 'Update Currency'
        on_press: app.app_update()
